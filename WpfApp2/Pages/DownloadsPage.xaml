<Page x:Class="WpfApp2.Pages.DownloadsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d"
      Title="DownloadsPage" Height="440" Width="800">
    <Grid Margin="10,5,10,30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Border Style="{StaticResource BorderRegion}">
            <StackPanel>
                <TextBlock FontWeight="ExtraBlack" Text="下载源"/>
                <ComboBox x:Name="SourceComboBox"
                          SelectionChanged="SourceComboBox_OnSelectionChanged"
                          Width="240"
                          Margin="0,6,0,0">
                    <ComboBoxItem Tag="BuiltIn" Content="内置源" IsSelected="True"/>
                    <ComboBoxItem Tag="SeewoAppsMarket" Content="SeewoAppsMarket"/>
                </ComboBox>
            </StackPanel>
        </Border>

        <Border Grid.Row="1" Margin="0,8,0,8" Style="{StaticResource BorderRegion}">
            <StackPanel>
                <TextBlock FontWeight="ExtraBlack" Text="应用列表（ListView）"/>
                <TextBlock FontWeight="Medium" Text="勾选后点击开始下载。"/>
                <ListView x:Name="AppsListView" Margin="0,8,0,0" Height="280">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Width="70" Header="选择">
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding IsSelected, Mode=TwoWay}"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn Width="170" Header="应用名" DisplayMemberBinding="{Binding Name}"/>
                            <GridViewColumn Width="360" Header="描述" DisplayMemberBinding="{Binding Description}"/>
                            <GridViewColumn Width="180" Header="文件名" DisplayMemberBinding="{Binding TargetFileName}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </StackPanel>
        </Border>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
            <Button hc:BorderElement.CornerRadius="15"
                    Style="{StaticResource ButtonDefault}"
                    Width="120"
                    Margin="0,0,12,0"
                    Content="刷新列表"
                    Click="RefreshButton_OnClick"/>
            <Button hc:BorderElement.CornerRadius="15"
                    Style="{StaticResource ButtonPrimary}"
                    Width="200"
                    Content="开始下载"
                    Click="ButtonBase_OnClick"/>
        </StackPanel>
    </Grid>
</Page>
